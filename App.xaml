<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Combat_Critters_2._0"
             xmlns:converter="clr-namespace:Combat_Critters_2._0.Converters"
             x:Class="Combat_Critters_2._0.App">
    <Application.Resources>
        <ResourceDictionary>
            <converter:InverseBooleanConverter x:Key="InverseBooleanConverter"/>
            <converter:ImageUrlConverter x:Key="ImageUrlConverter"/>
            <converter:IsZeroConverter x:Key="IsZeroConverter"/>
            <converter:IsNotZeroConverter x:Key="IsNotZeroConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml"/>
                <ResourceDictionary Source="Resources/Styles/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
