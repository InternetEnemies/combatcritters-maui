<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary
        xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
        xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
        xmlns:local="clr-namespace:Combat_Critters_2._0">

        <!-- Hero page divider style -->
        <Style x:Key="VerticalDividerStyle"
               TargetType="BoxView">
                <Setter Property="BackgroundColor"
                        Value="#FF4F4E4E"/>
                <Setter Property="HorizontalOptions"
                        Value="End"/>
                <Setter Property="VerticalOptions"
                        Value="Center"/>
                <Setter Property="HeightRequest"
                        Value="80"/>
                <Setter Property="WidthRequest"
                        Value="2"/>
        </Style>

        <!-- Card Frame Style -->
        <Style x:Key="CardFrameStyle"
               TargetType="Frame">
                <Setter Property="CornerRadius"
                        Value="8"/>
                <Setter Property="HasShadow"
                        Value="True"/>
                <Setter Property="BorderColor"
                        Value="Black"/>
                <Setter Property="HorizontalOptions"
                        Value="Center"/>
                <Setter Property="VerticalOptions"
                        Value="Center"/>
        </Style>

        <!-- Data template for cards -->
        <DataTemplate x:Key="CardTemplate">
                <ContentView HorizontalOptions="Center"
                             WidthRequest="190"
                             HeightRequest="300">

                        <Frame Style="{StaticResource CardFrameStyle}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"
                               WidthRequest="190"
                               HeightRequest="300">
                                <Frame.Triggers>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding Rarity}"
                                                     Value="0">
                                                <Setter Property="Background"
                                                        Value="{StaticResource CommonGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding Rarity}"
                                                     Value="1">
                                                <Setter Property="Background"
                                                        Value="{StaticResource UncommonGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding Rarity}"
                                                     Value="2">
                                                <Setter Property="Background"
                                                        Value="{StaticResource RareGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding Rarity}"
                                                     Value="3">
                                                <Setter Property="Background"
                                                        Value="{StaticResource EpicGradient}"/>
                                        </DataTrigger>
                                        <DataTrigger TargetType="Frame"
                                                     Binding="{Binding Rarity}"
                                                     Value="4">
                                                <Setter Property="Background"
                                                        Value="{StaticResource LegendaryGradient}"/>
                                        </DataTrigger>
                                </Frame.Triggers>

                                <StackLayout Orientation="Vertical">

                                        <!-- Card Name -->
                                        <Frame Padding="5"
                                               BackgroundColor="Black"
                                               Margin="0,0,0,1"
                                               HasShadow="False">
                                                <Label Text="{Binding Name}"
                                                       FontFamily="MtgBold"
                                                       FontSize="14"
                                                       TextColor="White"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                        </Frame>

                                        <!-- Card Image -->
                                        <Frame Padding="10"
                                               HasShadow="False"
                                               BackgroundColor="Transparent">
                                                <Image Source="{Binding Image, Converter={StaticResource ImageUrlConverter}}"
                                                       Aspect="AspectFit"
                                                       HeightRequest="100"/>
                                        </Frame>

                                        <!-- Card Description -->
                                        <Frame BorderColor="Black"
                                               Padding="5"
                                               Margin="0,1,0,0"
                                               HasShadow="False">
                                                <Label Text="{Binding Description}"
                                                       FontSize="12"
                                                       TextColor="Black"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                        </Frame>

                                </StackLayout>

                        </Frame>
                </ContentView>
        </DataTemplate>

        <!-- Data template for currency -->
        <DataTemplate x:Key="CurrencyTemplate">
                <HorizontalStackLayout HorizontalOptions="Center"
                                       VerticalOptions="Center">
                        <Image Source="currency.jpg"
                               HeightRequest="50"
                               WidthRequest="50"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>

                        <Label Text="{Binding _coins}"
                               HorizontalOptions="Center"
                               VerticalOptions="Center"/>
                </HorizontalStackLayout>
        </DataTemplate>

