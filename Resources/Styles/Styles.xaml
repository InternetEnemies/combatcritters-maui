                                               HorizontalOptions="Fill"
                                               VerticalOptions="Fill">
                                                <Label Text="{Binding Name}"
                                                       HorizontalOptions="Center"
                                                       VerticalOptions="Center"/>
                                        </Frame>
                                </Grid>
                        </Frame>
                </ContentView>
        </DataTemplate>

