<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Combat_Critters_2._0.LoginPage"
             Title="Login">

    <!-- Grid Layout -->
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0"
                                 EndPoint="1,1">
                <GradientStop Color="#100303"
                              Offset="0.0"/>
                <GradientStop Color="#95389E"
                              Offset="0.5"/>
                <GradientStop Color="#100303"
                              Offset="1.0"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!--Grid definitions-->
        <!-- Row Definitions for Header, Body, and Footer -->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <!--Header-->
        <Frame Style="{StaticResource LogoFrameStyle}"
               Grid.Row="0"
               HorizontalOptions="Center"
               VerticalOptions="Center">
            <Label
                Text="Combat Critters Manager"
                Style="{StaticResource LogoTextStyle}"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </Frame>

        <!-- Form Body -->
        <Frame Grid.Row="1"
               Style="{StaticResource FormStyle}">

            <StackLayout Spacing="15"
                         HorizontalOptions="Fill">
                <Entry x:Name="username"
                       Placeholder="Enter Username"
                       Style="{StaticResource FormEntryStyle}"/>

                <Entry x:Name="password"
                       Placeholder="Enter Password"
                       IsPassword="True"
                       Style="{StaticResource FormEntryStyle}"/>

                <HorizontalStackLayout Spacing="15">
                    <Button
                        Text="Login"
                        Style="{StaticResource ButtonStyle}"
                        Clicked="OnLoginClicked"/>

                    <Button
                        Text="Create Account"
                        Style="{StaticResource ButtonStyle}"
                        Clicked="OnCreateAccountClicked"/>
                </HorizontalStackLayout>
            </StackLayout>

        </Frame>

        <!-- Footer -->
        <ContentView Grid.Row="2">
            <Label
                Text="An Internet Enemies Game"
                TextColor="#F7F7F7"
                HorizontalOptions="Center"
                VerticalOptions="Center"/>
        </ContentView>

    </Grid>


</ContentPage>